<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="15dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvAlbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/ivAlbum"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="fitXY" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvAlbumName"
        style="@style/tvStyle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cvAlbum"
        android:layout_marginTop="3dp"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxWidth="150dp"
        android:scrollHorizontally="true"
        android:text="@string/tvAlbumName"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvAlbumSinger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAlbumName"
        android:ellipsize="marquee"
        android:fontFamily="@font/comfortaa"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxWidth="150dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="@string/tvAlbumSinger"
        android:textColor="@color/colorLight9"
        android:textSize="14sp"
        android:textStyle="normal" />
</RelativeLayout>